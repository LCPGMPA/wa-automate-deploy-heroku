{
  "name": "open-wa-deploy-heroku",
  "version": "1.0.0",
  "description": "The official open-wa Easy API heroku deployment",
  "scripts": {
    "start": "concurrently \"npx @open-wa/wa-automate --disable-spins --port $PORT --popup --in-docker --qr-timeout 0 -k $API_KEY --keep-alive --keep-updated --executable-path='/app/.apt/usr/bin/google-chrome'\" \"python3 app.py\"",
    "scan": "npx @open-wa/wa-automate --disable-spins -o --in-docker --port $PORT"
  },
  "repository": "https://github.com/LCPGMA/wa-automate-deploy-heroku.git",
  "author": "M SHAH <shah@openwa.dev>",
  "license": "H-DNH V1.0",
  "dependencies": {
    "@open-wa/wa-automate": "*",
    "concurrently": "*"
  }
}
